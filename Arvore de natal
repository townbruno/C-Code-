#include <stdio.h>
#include <stdio.h>

int main() {
    int i, j, k;
    int n = 16, m = 0;


    for (k = 4; k <= 12; k += 2) {
        for (i = 1; i < k; i++) {
            for (j = n; j > i; j--) {
                printf(" ");
            }
            for (j = 0; j < i + m; j++) {
                printf("**");
            }
            printf("\n");
        }
        n--;
        m++;
    }


    for (i = 1; i < 9; i++) {
        for (j = n + 1; j > 0; j--) {
            printf(" ");
        }
        for (j = 0; j < 4; j++) {
            printf("**");
        }
        printf("\n");
    }

    return 0;
}
